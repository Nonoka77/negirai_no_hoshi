<% if user_signed_in? %>
    <% if current_user.already_cheered?(post) %>
        <%= link_to post_cheers_path(post), class: "react-icon", method: :delete, remote: true do %>
            <%= icon('fas', 'smile-wink', style: 'color: #000022') %>
            <span class="icon-count">わかるよ <%= post.cheers.count %></span>
        <% end %>
    <% else %>
        <%= link_to post_cheers_path(post), class: "react-icon", method: :post, remote: true do %>
            <%= icon('far', 'smile-wink', style: 'color: gray;') %>
            <span class="icon-count">わかるよ <%= post.cheers.count %></span>
        <% end %>
    <% end %>
<% end %>
