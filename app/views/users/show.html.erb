<div class="container absolute z-20 ">
  <h1>あなたのメッセージ</h1>
  <% @posts.each do |post| %>
      <td class="post" id="post<%= post.id%>">
        <div class="pt-3 pl-3 content mb-4 border w-auto rounded-md bg-white text-black ">
          <div class="message mb-3 ">
            <%=  post.content %>
          </div>
            <div id="js-post-<%= post.id %>">
              <p id="js-post-error-<%= post.id %>" class="text-danger"></p>
              <textarea style="display: none;" id="js-textarea-post-<%= post.id %>" class="form-control post-error"><%= post.content %></textarea>
              <div id="js-post-button-<%= post.id %>" style="display: none;" class="mb-3">
                <button data-cancel-id=<%= post.id %> type="button" class="btn btn-light post-cancel-button pr-2">キャンセル</button>
                <button data-update-id=<%= post.id%> type="submit" class="btn btn-success post-update-button">更新</button>
              </div>
            </div>
            <div class="side-bar space-x-20">
              <span id="index_like_<%= post.id %>">
                  <%= render 'likes/like', post: post %>
              </span>
              <span id="index_calm_<%= post.id %>">
                  <%= render 'calms/calm', post: post %>
              </span>
              <span id="index_cheer_<%= post.id %>">
                  <%= render 'cheers/cheer', post: post %>
              </span>
              <% if user_signed_in? && post.user_id == current_user.id %>
                  <span data-post-id="<%= post.id %>" class="js-edit-button cursor-pointer">
                      <%= icon('fas', 'edit') %>
                  </span>
                  <%= link_to "削除", post_path(post.id), class:"post_delete", method: :delete %>
              <% end %>
            </div>
        </div>
      </td>
  <% end %>
<div>
  <%= link_to 'ねぎらう', posts_path,  class: "bg-transparent border py-2 px-4 rounded-full border-white" %>  
</div>
</div>
