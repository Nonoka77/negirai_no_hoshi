<div class="container">
  <h2>ログイン</h2>
  <%= form_with model: @user, url: login_path, local: true do |f| %>
    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class:"feedback-input"  %>
    </div>
  
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class:"feedback-input"  %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  
    <div class="actions">
      <%= f.submit t("defaults.login"), class:"submit-btn" %>
    </div>
  <% end %>
</div>
